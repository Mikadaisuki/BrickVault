# BrickVault Cross-Chain Relayer Configuration
# Copy this file to .env and fill in your values

# ============================================
# Environment
# ============================================
NODE_ENV=development

# ============================================
# Stacks Configuration
# ============================================
STACKS_NETWORK=testnet
STACKS_API_URL=https://api.testnet.hiro.so
STACKS_CONTRACT_ADDRESS=SP[YOUR-ADDRESS].brick-vault-gateway
STACKS_PRIVATE_KEY=0x[YOUR-STACKS-PRIVATE-KEY]
STACKS_FEE_RATE=0.000001
STACKS_MAX_RETRIES=3

# ============================================
# EVM Configuration (CRITICAL)
# ============================================
EVM_NETWORK=sepolia

# EVM RPC URL - Use WebSocket (ws:// or wss://) for real-time events, or HTTP for polling
# WebSocket (recommended): wss://sepolia.infura.io/ws/v3/YOUR_INFURA_KEY
# HTTP (fallback):        https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# Local WebSocket:        ws://localhost:8545
EVM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

EVM_STACKS_MANAGER_ADDRESS=0x[YOUR-STACKS-MANAGER-ADDRESS]

# ** IMPORTANT ** This private key must be the relayer authorized in StacksCrossChainManager
EVM_PRIVATE_KEY=0x[YOUR-EVM-RELAYER-PRIVATE-KEY]
EVM_GAS_LIMIT=800000
EVM_MAX_RETRIES=3

# ============================================
# Monitoring Configuration
# ============================================
MONITORING_INTERVAL=5000
MONITORING_MAX_RETRIES=3
MONITORING_RETRY_DELAY=2000
MONITORING_BATCH_SIZE=10
MONITORING_TIMEOUT=30000

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false

# ============================================
# Vercel (optional)
# ============================================
VERCEL_URL=https://your-relayer.vercel.app
