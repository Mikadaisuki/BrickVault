# Local Development Environment Configuration
NODE_ENV=development

# Stacks Configuration (using testnet for now, we'll mock this later)
STACKS_NETWORK=testnet
STACKS_API_URL=https://api.testnet.hiro.so
STACKS_CONTRACT_ADDRESS=SP[LOCAL-CONTRACT].brick-vault-gateway
STACKS_PRIVATE_KEY=0x[LOCAL-STACKS-KEY]
STACKS_FEE_RATE=0.000001

# EVM Configuration - LOCAL HARDHAT NETWORK
EVM_NETWORK=localhost
EVM_RPC_URL=http://localhost:8545
EVM_STACKS_MANAGER_ADDRESS=0x[WILL_BE_SET_AFTER_DEPLOYMENT]
EVM_PRIVATE_KEY=0x[USE_FIRST_HARDHAT_ACCOUNT_PRIVATE_KEY]
EVM_GAS_LIMIT=500000

# Monitoring Configuration
MONITORING_INTERVAL=2000
MONITORING_MAX_RETRIES=3
MONITORING_RETRY_DELAY=1000
MONITORING_BATCH_SIZE=5
MONITORING_TIMEOUT=10000

# Logging Configuration
LOG_LEVEL=debug
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
