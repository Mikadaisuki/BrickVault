# Staging Environment Configuration
NODE_ENV=staging

# Stacks Configuration
STACKS_NETWORK=testnet
STACKS_API_URL=https://api.testnet.hiro.so
STACKS_CONTRACT_ADDRESS=SP[STAGING-CONTRACT].brick-vault-gateway
STACKS_FEE_RATE=0.000001

# EVM Configuration
EVM_NETWORK=sepolia
EVM_RPC_URL=https://sepolia.infura.io/v3/[STAGING-INFURA-KEY]
EVM_STACKS_MANAGER_ADDRESS=0x[STAGING-MANAGER-ADDRESS]
EVM_PRIVATE_KEY=0x[STAGING-EVM-KEY]
EVM_GAS_LIMIT=800000

# Monitoring Configuration
MONITORING_INTERVAL=3000
MONITORING_MAX_RETRIES=5
MONITORING_RETRY_DELAY=1500
MONITORING_BATCH_SIZE=20
MONITORING_TIMEOUT=45000

# Logging Configuration
LOG_LEVEL=info
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
