# Production Environment Configuration
NODE_ENV=production

# Stacks Configuration
STACKS_NETWORK=mainnet
STACKS_API_URL=https://api.hiro.so
STACKS_CONTRACT_ADDRESS=SP[PROD-CONTRACT].brick-vault-gateway
STACKS_FEE_RATE=0.000001

# EVM Configuration
EVM_NETWORK=mainnet
EVM_RPC_URL=https://mainnet.infura.io/v3/[PROD-INFURA-KEY]
EVM_STACKS_MANAGER_ADDRESS=0x[PROD-MANAGER-ADDRESS]
EVM_PRIVATE_KEY=0x[PROD-EVM-KEY]
EVM_GAS_LIMIT=1000000

# Monitoring Configuration
MONITORING_INTERVAL=2000
MONITORING_MAX_RETRIES=10
MONITORING_RETRY_DELAY=1000
MONITORING_BATCH_SIZE=50
MONITORING_TIMEOUT=60000

# Logging Configuration
LOG_LEVEL=warn
LOG_ENABLE_CONSOLE=false
LOG_ENABLE_FILE=true
